{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": [
    "scripts/**/*",
    "tasks/**/*",
    "thetest.s/**/*",
    "typechain/**/*",
    "types/**/*",
    "utils/**/*.ts",
    "/deploy/**/*",
    "/dist/**/*",
    "/src/**/*",
    "hardhat.config.ts"
  ],

  "files": ["./hardhat.config.ts"]
}
